---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={`${t("about.title")} | TomasAstro`}>
    <section class="max-w-7xl mx-auto px-12 pt-16 pb-32">
        <div class="max-w-4xl mb-32">
            <h1
                class="text-7xl md:text-9xl font-serif tracking-tight mb-8 animate-in fade-in slide-in-from-bottom-8 duration-1000"
            >
                {t("about.title")}
            </h1>
            <p
                class="text-2xl md:text-3xl text-zinc-400 font-light max-w-2xl leading-relaxed"
            >
                {t("about.subtitle")}
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 mb-40">
            <div>
                <h2 class="text-4xl font-serif mb-10">
                    {t("about.bio_title")}
                </h2>
                <div
                    class="space-y-6 text-xl text-zinc-400 leading-relaxed font-light"
                >
                    <p>{t("about.bio_text")}</p>
                    <p>{t("about.bio_text_2")}</p>
                </div>

                <div class="mt-12">
                    <a
                        href="https://github.com/Lenny606"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-4 px-8 py-4 bg-white/5 border border-white/10 rounded-full text-white hover:bg-white hover:text-black transition-all duration-300 group"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-5 h-5 transition-transform group-hover:scale-110"
                            ><path
                                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path>
                        </svg>
                        <span
                            class="text-sm uppercase tracking-widest font-bold"
                            >GitHub Profile</span
                        >
                    </a>
                </div>
            </div>
            <div class="bg-zinc-900 border border-white/5 p-12 plastic-static">
                <h3
                    class="text-xs uppercase tracking-[0.3em] text-zinc-500 mb-8 font-bold"
                >
                    Techstack
                </h3>
                <ul class="space-y-4 text-white font-medium">
                    <li
                        class="flex justify-between border-b border-white/5 pb-4 group cursor-default"
                    >
                        <span
                            class="text-zinc-400 group-hover:text-white transition-colors duration-300"
                            >Frontend</span
                        >
                        <span
                            class="text-zinc-500 uppercase text-[10px] tracking-widest mt-1 group-hover:text-white transition-colors duration-300"
                            >React / Astro / Tailwind</span
                        >
                    </li>
                    <li
                        class="flex justify-between border-b border-white/5 pb-4 group cursor-default"
                    >
                        <span
                            class="text-zinc-400 group-hover:text-white transition-colors duration-300"
                            >Backend</span
                        >
                        <span
                            class="text-zinc-500 uppercase text-[10px] tracking-widest mt-1 group-hover:text-white transition-colors duration-300"
                            >Node.js / Python / PHP</span
                        >
                    </li>
                    <li class="flex justify-between group cursor-default">
                        <span
                            class="text-zinc-400 group-hover:text-white transition-colors duration-300"
                            >AI + Automatization</span
                        >
                        <span
                            class="text-zinc-500 uppercase text-[10px] tracking-widest mt-1 group-hover:text-white transition-colors duration-300"
                            >n8n / Langgraph</span
                        >
                    </li>
                </ul>
            </div>
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-20">
                <h2 class="text-5xl font-serif mb-6">
                    {t("about.contact_title")}
                </h2>
                <p class="text-zinc-400 text-lg">
                    {t("about.contact_subtitle")}
                </p>
            </div>
            <ContactForm />
        </div>
    </section>
</BaseLayout>
