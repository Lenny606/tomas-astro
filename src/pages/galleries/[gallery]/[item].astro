---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { galleryService } from "../../../services/gallery-service";
import { getLangFromUrl, useTranslations } from "../../../utils/i18n";

const { gallery: gallerySlug, item: itemSlug } = Astro.params;
const gallery = await galleryService.getGalleryBySlug(gallerySlug as string);
const item = await galleryService.getGalleryItem(
    gallerySlug as string,
    itemSlug as string
);

if (!gallery || !item) {
    return Astro.redirect("/404");
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={`${item.title} | ${gallery.title}`}>
    <section class="max-w-7xl mx-auto px-12 pt-16 pb-32">
        <a
            href={`/galleries/${gallery.slug}`}
            class="text-xs uppercase tracking-[0.2em] font-bold text-zinc-500 hover:text-white transition-colors mb-16 inline-block"
        >
            {t("item.back")}
            {gallery.title}
        </a>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-start">
            <div
                class="overflow-hidden bg-zinc-900 border border-white/5 plastic"
            >
                <img
                    src={item.url}
                    alt={item.title}
                    class="w-full h-auto grayscale transition-[filter] duration-1000 hover:grayscale-0"
                />
            </div>

            <div class="sticky top-40">
                <div class="mb-12">
                    <p
                        class="text-xs uppercase tracking-[0.3em] text-zinc-500 mb-4 font-bold"
                    >
                        {gallery.title} / {item.year}
                    </p>
                    <h1 class="text-6xl font-serif mb-6 leading-tight">
                        {item.title}
                    </h1>
                    <p class="text-xl text-zinc-400 font-light leading-relaxed">
                        {item.description}
                    </p>
                </div>

                <div class="space-y-8 border-t border-white/5 pt-12">
                    <div class="grid grid-cols-2 gap-8">
                        <div>
                            <h4
                                class="text-zinc-500 uppercase tracking-widest text-[10px] mb-2 font-bold"
                            >
                                {t("item.medium")}
                            </h4>
                            <p class="text-sm text-white font-medium">
                                {item.medium}
                            </p>
                        </div>
                        <div>
                            <h4
                                class="text-zinc-500 uppercase tracking-widest text-[10px] mb-2 font-bold"
                            >
                                {t("item.year")}
                            </h4>
                            <p class="text-sm text-white font-medium">
                                {item.year}
                            </p>
                        </div>
                        <div>
                            <h4
                                class="text-zinc-500 uppercase tracking-widest text-[10px] mb-2 font-bold"
                            >
                                {t("item.status")}
                            </h4>
                            <p class="text-sm font-medium">
                                {
                                    item.status === "sold" ? (
                                        <span class="text-red-400">
                                            {t("item.sold")}
                                        </span>
                                    ) : (
                                        <span class="text-[#9eff7a]">
                                            {t("item.available")}
                                        </span>
                                    )
                                }
                            </p>
                        </div>
                    </div>

                    <div class="pt-8">
                        <button
                            class="w-full py-5 bg-white text-black text-sm uppercase tracking-widest font-bold hover:bg-zinc-200 transition-colors"
                        >
                            {t("item.inquire")}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
