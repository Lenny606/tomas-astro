---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="TomasAstro | Creative Developer">
  <section class="max-w-7xl mx-auto px-12 pt-16 pb-32">
    <div class="max-w-4xl">
      <h1 class="text-7xl md:text-9xl font-serif tracking-tight mb-12 animate-in fade-in slide-in-from-bottom-8 duration-1000">
        {t('hero.title')}
      </h1>
      
      <p class="text-2xl md:text-3xl text-zinc-400 mb-16 max-w-2xl leading-relaxed font-light">
        {t('hero.subtitle')}
      </p>

      <div class="flex items-center gap-8">
        <a href="#" class="px-10 py-5 bg-white text-black text-sm uppercase tracking-widest font-bold hover:bg-zinc-200 transition-colors">
          {t('hero.cta')}
        </a>
        <a href="#" class="text-sm uppercase tracking-widest font-bold link-hover">
          View Selected Work
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-12 py-32 border-t border-white/5">
    <div class="flex justify-between items-end mb-20">
      <h2 class="text-5xl font-serif">Selected Work</h2>
      <a href="#" class="text-xs uppercase tracking-[0.2em] font-bold text-zinc-500 hover:text-white transition-colors">View All</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {[1, 2, 3].map((i) => (
        <div class="group relative cursor-pointer overflow-hidden plastic aspect-[4/5] bg-zinc-900 border border-white/5">
          <!-- Background Image Placeholder -->
          <div class="absolute inset-0 bg-linear-to-br from-zinc-800 to-zinc-900 group-hover:scale-105 transition-transform duration-700 ease-out"></div>
          
          <!-- Overlay -->
          <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-10">
            <div class="translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
              <p class="text-xs uppercase tracking-[0.2em] text-zinc-400 mb-3">Portfolio Project</p>
              <h3 class="text-3xl font-serif leading-tight">Project Title {i}</h3>
              <div class="mt-6 h-[1px] w-0 group-hover:w-full bg-white transition-all duration-700 delay-100"></div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
