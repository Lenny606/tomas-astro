---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';
import selectedWorks from '../data/selected_works.json';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="TomasAstro | Creative Developer">
  <section class="max-w-7xl mx-auto px-12 pt-16 pb-32 relative overflow-hidden">
    <!-- Spline Scene Background - Commented out for performance
    <div class="absolute right-0 top-0 w-full lg:w-2/3 h-full z-0 opacity-80 pointer-events-none lg:pointer-events-auto">
      <div class="w-full h-full relative">
        <iframe src='https://my.spline.design/clonercubesimplecopy-7sZBoIYllwysjLz1HHxmJdCS/' frameborder='0' width='100%' height='100%' class="w-full h-full"></iframe>
        <div class="absolute inset-0 bg-linear-to-r from-black via-transparent to-transparent pointer-events-none"></div>
      </div>
    </div>
    -->

    <div class="max-w-4xl relative z-10">
      <h1 
        class="text-7xl md:text-9xl font-serif tracking-tight mb-12 animate-in fade-in slide-in-from-bottom-8 duration-1000"
        set:html={t('hero.title')}
      />
      
      <p class="text-2xl md:text-3xl text-zinc-400 mb-16 max-w-2xl leading-relaxed font-light">
        {t('hero.subtitle')}
      </p>

      <div class="flex flex-wrap items-center gap-8">
        <a href="#work" class="px-10 py-5 bg-white text-black text-sm uppercase tracking-widest font-bold hover:bg-zinc-200 transition-colors" aria-label="Learn more about my work">
          {t('hero.cta')}
        </a>
        <a href="#work" class="text-sm uppercase tracking-widest font-bold link-hover" aria-label="View recent work">
          {t('hero.view_work')}
        </a>
      </div>
    </div>
  </section>

  <section id="work" class="max-w-7xl mx-auto px-12 py-32 border-t border-white/5">
    <div class="flex justify-between items-end mb-20">
      <h2 class="text-5xl font-serif">{t('work.title')}</h2>
      <a href="#" class="text-xs uppercase tracking-[0.2em] font-bold text-zinc-500 hover:text-white transition-colors">{t('work.view_all')}</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {selectedWorks.map((work) => (
        <a href={work.url} target="_blank" rel="noopener noreferrer" class="group relative cursor-pointer overflow-hidden plastic aspect-[4/5] bg-zinc-900 border border-white/5 block">
          <!-- Background Image Placeholder -->
          <div class="absolute inset-0 bg-linear-to-br from-zinc-800 to-zinc-900 group-hover:scale-105 transition-transform duration-700 ease-out">
            {work.image && <img src={work.image} alt={work.title} class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-700" />}
          </div>
          
          <!-- Overlay -->
          <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-10">
            <div class="translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
              <p class="text-xs uppercase tracking-[0.2em] text-zinc-400 mb-3">
                {work.category === 'Web Development' ? t('category.web') : work.category}
              </p>
              <h3 class="text-3xl font-serif leading-tight">{work.title}</h3>
              <div class="mt-6 h-[1px] w-0 group-hover:w-full bg-white transition-[width] duration-700 delay-100"></div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
  <section class="max-w-7xl mx-auto px-12 py-32 reveal-section">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-20">
      <div class="lg:col-span-12">
        <div class="text-4xl md:text-6xl leading-[1.3] font-serif">
          <span class="text-white reveal-item block mb-8">
            {t('about.agency_text_1')}
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-accent-pink text-white text-xl font-bold mx-2 align-middle font-sans">b</span>
            <span class="underline decoration-1 underline-offset-[12px] decoration-white/20 italic">{t('about.agency_text_agency')}</span>
            {t('about.agency_text_specialising')}
          </span>
          
          <span class="text-zinc-600 reveal-item block">
            {t('about.agency_text_2')}
            <span class="text-white underline decoration-1 underline-offset-[12px] decoration-white/30">{t('about.agency_text_tiny')}</span>
            {t('about.agency_text_3')}
            <span class="inline-flex items-center px-2 py-0.5 rounded bg-accent-green text-[10px] uppercase font-black text-black mx-2 align-middle transform -rotate-12 shadow-sm font-sans">New Start</span>
            {t('about.agency_text_4')}
          </span>
        </div>
        
        <p class="mt-24 text-4xl md:text-5xl font-serif text-zinc-300 reveal-item">
          {t('about.involvement_title')}
        </p>
      </div>
    </div>
  </section>

  <script>
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const items = entry.target.querySelectorAll('.reveal-item');
          items.forEach((item, index) => {
            setTimeout(() => {
              item.classList.add('visible');
            }, index * 150);
          });
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.reveal-section').forEach(section => {
      observer.observe(section);
    });
  </script>

  <style>
    .reveal-item {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 1s cubic-bezier(0.2, 0.8, 0.2, 1), transform 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }
    .reveal-item.visible {
      opacity: 1;
      transform: translateY(0);
    }
    
    .text-zinc-600 {
      color: #52525b;
    }

    /* Spline hide logo/watermark if possible via styling or just container overflow
    iframe {
      border: none;
    }
    
    @media (max-width: 1024px) {
      .absolute.right-0.top-0 {
        opacity: 0.4;
        width: 100%;
      }
    }
    */
  </style>
</BaseLayout>
