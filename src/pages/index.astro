---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="TomasAstro | Creative Developer">
  <section class="max-w-7xl mx-auto px-12 pt-16 pb-32">
    <div class="max-w-4xl">
      <h1 class="text-7xl md:text-9xl font-serif tracking-tight mb-12 animate-in fade-in slide-in-from-bottom-8 duration-1000">
        {t('hero.title')}
      </h1>
      
      <p class="text-2xl md:text-3xl text-zinc-400 mb-16 max-w-2xl leading-relaxed font-light">
        {t('hero.subtitle')}
      </p>

      <div class="flex items-center gap-8">
        <a href="#" class="px-10 py-5 bg-white text-black text-sm uppercase tracking-widest font-bold hover:bg-zinc-200 transition-colors">
          {t('hero.cta')}
        </a>
        <a href="#" class="text-sm uppercase tracking-widest font-bold link-hover">
          View Selected Work
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-12 py-32 border-t border-white/5">
    <div class="flex justify-between items-end mb-20">
      <h2 class="text-5xl font-serif">Selected Work</h2>
      <a href="#" class="text-xs uppercase tracking-[0.2em] font-bold text-zinc-500 hover:text-white transition-colors">View All</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {[1, 2].map((i) => (
        <div class="group cursor-pointer">
          <div class="aspect-[16/10] bg-zinc-900 border border-white/5 overflow-hidden mb-6">
            <div class="w-full h-full bg-linear-to-br from-zinc-800 to-zinc-900 group-hover:scale-105 transition-transform duration-700"></div>
          </div>
          <h3 class="text-xl font-serif mb-2">Project Name {i}</h3>
          <p class="text-sm text-zinc-500 uppercase tracking-widest">Brand Identity / Web Design</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
